{
  "name": "react-native-data-platform",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "node node_modules/vite/bin/vite.js",
    "build": "npm run build:tokens && tsc -b && node node_modules/vite/bin/vite.js build",
    "build:tokens": "node src/design-system/build/token-compiler.js",
    "lint": "eslint .",
    "preview": "node node_modules/vite/bin/vite.js preview",
    "monitor": "node scripts/monitor-dashboard.cjs",
    "daily-check": "npm run monitor",
    "precommit": "npm run monitor",
    "validate-tokens": "npm run build:tokens && npm run monitor",
    "validate-references": "grep -r 'var(--colors-' src/index.css && echo '✅ Token references found'",
    "check-hardcoded": "grep -r ': [0-9].*%' src/index.css || echo '✅ Minimal hardcoded values'",
    "test-tokens": "npm run validate-tokens && npm run validate-references && npm run check-hardcoded",
    "analyze-tokens": "node scripts/token-usage-analytics.js",
    "analyze-impact": "node scripts/component-impact-analysis.js",
    "analyze-performance": "node scripts/performance-analysis.js",
    "analyze-simple": "node scripts/simple-analysis.js",
    "performance-check": "npm run monitor && npm run analyze-tokens",
    "ci-check": "node scripts/ci-performance-check.js",
    "analysis-suite": "npm run analyze-simple && npm run analyze-performance && npm run analyze-impact && npm run analyze-tokens"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tabs": "^1.1.12",
    "@tailwindcss/postcss": "^4.1.11",
    "@tanstack/react-query": "^5.83.0",
    "@tanstack/react-virtual": "^3.13.12",
    "@use-gesture/react": "^10.3.1",
    "autoprefixer": "^10.4.21",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.11",
    "lucide-react": "^0.534.0",
    "postcss": "^8.5.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.61.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.11",
    "vaul": "^1.1.2",
    "zod": "^4.0.13",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.4"
  }
}